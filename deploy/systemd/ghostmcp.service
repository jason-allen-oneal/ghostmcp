[Unit]
Description=GhostMCP Server
After=network.target

[Service]
Type=simple
User=ghostmcp
Group=ghostmcp
WorkingDirectory=/opt/ghostmcp
EnvironmentFile=/etc/ghostmcp/ghostmcp.env
ExecStart=/opt/ghostmcp/.venv/bin/ghostmcp
Restart=on-failure
RestartSec=3
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/log/ghostmcp

[Install]
WantedBy=multi-user.target
